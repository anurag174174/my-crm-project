<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>EDIT USER</title>
    <link rel="stylesheet" href="/stylesheets/tailwind.css">
</head>

<body class="bg-gray-100">
    <!-- Main Wrapper -->
    <div class="flex flex-col sm:flex-row justify-center items-center sm:items-start sm:space-x-6 p-2 bg-white shadow-lg rounded-lg mx-auto mt-8 max-w-5xl ">
        <!-- Sidebar -->
        <div class="sm:w-2/5 bg-white  p-6 space-y-4">
            <div class="text-center">
                <!-- Profile Image -->
                <img src="https://via.placeholder.com/100" alt="Profile Picture"
                    class="w-24 h-24 mx-auto rounded-full mb-4">
                <p class="text-lg font-bold text-gray-800 capitalize"><%=user.first_name%> <%=user.last_name%></p>
            </div>
            <!-- Menu -->
            <nav>
              <ul class="space-y-2">
                  <li>
                      <a href="/user/<%= user.user_id %>/dashboard" class="flex items-center px-4 py-2 text-orange-600 font-semibold hover:bg-gray-200 rounded-md">
                          <span>üè†</span>
                          <span class="ml-3">Dashboard</span>
                      </a>
                  </li>
                  <li>
                      <a href="/user/<%= user.user_id %>/edit" class="flex items-center px-4 py-2  text-blue-600 font-medium rounded-md hover:bg-gray-200">
                          <span>üìã</span>
                          <span class="ml-3">Edit user</span>
                      </a>
                  </li>
                  <li>
                    <a href="/user/<%= user.user_id %>/" class="flex bg-blue-100 items-center px-4 py-2  text-blue-600 font-medium rounded-md">
                        <span>üìã</span>
                        <span class="ml-3">User Details</span>
                    </a>
                </li>
                <li>
                  <a href="/leads" class="flex items-center px-4 py-2  text-blue-600 font-medium rounded-md hover:bg-gray-200">
                      <span>üìä</span>
                      <span class="ml-3">View Leads</span>
                  </a>
              </li>
              <li>
                <a href="/logout" class="flex items-center px-4 py-2  text-red-400 font-medium rounded-md hover:bg-gray-200">
                    <span>üö™</span>
                    <span class="ml-3">&nbsp; Logout</span>
                </a>
            </li>
              </ul>
        </nav>
        </div>
        <div class="w-full sm:w-3/5 p-6 bg-gray-50 rounded-lg">
            <!-- Header -->
            <h1 class="text-3xl font-bold text-gray-800 mb-6 text-center tracking-wider"> User Details</h1>
    
            <!-- Personal Information -->
            <section class="mb-6">
                <h2 class="text-2xl font-semibold mb-2">Personal Information</h2>
                <ul class="list-disc pl-6 space-y-2">
                    <li><strong>First Name:</strong> <%= user.first_name %></li>
                    <li><strong>Last Name:</strong> <%= user.last_name %></li>
                    <li><strong>User ID:</strong> <%= user.user_id %></li>
                </ul>
            </section>
    
            <!-- Contact Information -->
            <section class="mb-6">
                <h2 class="text-2xl font-semibold mb-2">Contact Information</h2>
                <ul class="list-disc pl-6 space-y-2">
                    <li><strong>Email:</strong> <%= user.email %></li>
                </ul>
            </section>
    
            <!-- Other Information -->
            <section class="mb-6">
                <h2 class="text-2xl font-semibold mb-2">Other Information</h2>
                <ul class="list-disc pl-6 space-y-2">
                    <li><strong>Role:</strong> <%= user.roleName %></li>
                    <li><strong>Joined On:</strong> <%= new Date(user.created_at).toLocaleString() %></li>
                </ul>
            </section>
    
            <!-- Conditional Rendering for Current User -->
            <div class="mt-6">
                <% if (isCurrentUser) { %>
                    <a href="/users/<%= user.user_id %>/edit"
                        class="inline-block bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 transition">
                        Edit Profile
                    </a>
                <% } %>
    
                <!-- View Leads Link -->
               
            </div>
        </div>
    </div>
</body>

</html>