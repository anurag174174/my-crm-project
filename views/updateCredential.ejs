<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Update Credential</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100">
    <!-- header section -->
    <header class="fixed top-0 left-0 w-full bg-white shadow-md z-10 h-20">
      <div class="container h-full min-w-full flex justify-between items-center p-4">
        <!-- Logo Wrapper -->
        <div class="h-full w-44  ">
          <img 
            class="h-full w-full object-cover" 
            src="/images/knoqlogicologico.svg" 
            alt="Company Logo" 
          />
        </div>
          
          <!-- Desktop Navigation -->
          <nav class="hidden md:flex space-x-6">
            <a href="/user/<%= currentUser %>/dashboard" class="text-gray-800 hover:text-blue-500">Dashboard</a>
            <a href="/logout" class="text-gray-800 hover:text-blue-500">Logout</a>
          </nav>
          
          <!-- Mobile Menu Button -->
          <button id="menu-toggle" class="md:hidden text-gray-800 focus:outline-none">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" class="w-6 h-6">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
          </button>
        </div>
        
        <!-- Mobile Menu -->
        <div id="mobile-menu" class="hidden bg-gray-100 md:hidden">
          <a href="/user/<%= currentUser%>/dashboard"  class="block px-5 py-2 text-gray-800 hover:bg-blue-500 hover:text-white">Dashboard</a>
          <a href="/logout" class="block px-5 py-2 text-gray-800 hover:bg-blue-500 hover:text-white">Logout</a>
        </div>
      </header>

    <div class="container mx-auto px-4 py-8 mt-20">
        <h1 class="text-3xl font-bold text-center text-gray-800 mb-6">Update Credential</h1>
        <form action="/credential/update-credential" method="POST" class="bg-white shadow-md rounded px-8 py-6 max-w-lg mx-auto">
            <div class="mb-4">
                <label for="client_credential_id" class="block text-gray-700 font-bold mb-2">Credential ID:</label>
                <input type="text" id="client_credential_id" name="client_credential_id" 
                       class="w-full px-4 py-2 border rounded" value="<%= clientCredential.client_credential_id %>" readonly>
            </div>
            <div class="mb-4">
                <label for="client_credential_email" class="block text-gray-700 font-bold mb-2">Email:</label>
                <input type="email" id="client_credential_email" name="client_credential_email" 
                       class="w-full px-4 py-2 border rounded" value="<%= clientCredential.client_credential_email %>" required>
            </div>
            <div class="mb-4">
                <label for="client_credential_name" class="block text-gray-700 font-bold mb-2">Client Name:</label>
                <input type="text" id="client_credential_name" name="client_credential_name" 
                       class="w-full px-4 py-2 border rounded" value="<%= clientCredential.client_credential_name %>" required>
            </div>
            <div class="mb-4">
                <label for="client_credential_password" class="block text-gray-700 font-bold mb-2">New Password:</label>
                <input type="text" id="client_credential_password" name="client_credential_password" 
                       class="w-full px-4 py-2 border rounded" value="<%= clientCredential.client_credential_password %>" required>
            </div>
            
            
            <div class="text-center">
                <button type="submit" 
                        class="bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded">
                    Update Credential
                </button>
            </div>
        </form>
    </div>
    <script>
        const menuToggle = document.getElementById("menu-toggle");
        const mobileMenu = document.getElementById("mobile-menu");
    
        menuToggle.addEventListener("click", () => {
          mobileMenu.classList.toggle("hidden");
        });
        </script>
</body>
</html>
